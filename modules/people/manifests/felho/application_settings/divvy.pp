class people::felho::application_settings::divvy {
  boxen::osx_defaults { 'Divvy useGlobalHotkey':
    user   => $::luser,
    domain => 'com.mizage.Divvy',
    key    => 'useGlobalHotkey',
    value  => 1,
  }

  people::felho::osx_defaults_extended { 'Divvy globalHotkey':
    user   => $::luser,
    domain => 'com.mizage.Divvy',
    key    => 'globalHotkey',
    type   => 'dict',
    value  => { 'keyCode' => 13, 'modifiers' => 2304 },
  }

  boxen::osx_defaults { 'Divvy shortcuts':
    user   => $::luser,
    domain => 'com.mizage.Divvy',
    key    => 'shortcuts',
    type   => 'data',
    value  => '',
  }

  exec { 'Enable access for assistive devices':
    command => '/usr/bin/touch /private/var/db/.AccessibilityAPIEnabled',
    user => 'root',
    require => Sudoers[ 'assistive_devices' ],
  }
}